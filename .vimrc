syntax on
set background=dark
set tabstop=2
set shiftwidth=2
set expandtab
set ai
set number
set hlsearch
set ruler
set backspace=2
set wildmenu
set path=$PWD/** 
set wildmode=longest:list,full
set pastetoggle=<leader>p 
set noswapfile
set clipboard=unnamed
filetype plugin indent on
nnoremap <esc><esc> :noh<return> 
