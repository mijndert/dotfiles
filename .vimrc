syntax on
set tabstop=2
set shiftwidth=2
set expandtab
set ai
set number
set hlsearch
set ruler
set backspace=2
set wildmenu
set path=$PWD/** 
set wildmode=longest:list,full
set pastetoggle=<leader>p 
set nuw=3
set noswapfile
highlight LineNr ctermfg=DarkGrey 
nnoremap <esc><esc> :noh<return>
colorscheme nord
