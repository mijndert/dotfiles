syntax on
colorscheme nord
set tabstop=2
set shiftwidth=2
set expandtab
set ai
set number
set hlsearch
set ruler
set backspace=2
set wildmenu
set path=$PWD/** 
set wildmode=longest:list,full
set pastetoggle=<leader>p 
set nuw=3
set noswapfile
set clipboard=unnamed
highlight LineNr ctermfg=DarkGrey 
filetype plugin indent on
nnoremap <esc><esc> :noh<return> 
